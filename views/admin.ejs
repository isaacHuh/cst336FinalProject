<!DOCTYPE html>
<html>
    <head>
        <title> </title>
        <link href="/css/styles.css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
       
        <script>
            
            function deleteConfirm(){
              
                 if (!confirm("Delete planet?")) {
                      event.preventDefault(); //prevents default behavior of the links
                    }
            }
        </script>
        
        
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/">Planetary Market</a>
        
            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/search">Search</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              </ul>
            </div>
          </nav>
          
        <h1> Admin Section </h1>

        <form action="/addPlanet">
          <button> Add New Planet </button>
        </form>
        
        <h3>Planets</h3>
        
        <% planetList.forEach(function(planet){  %>
        
        
            [<a href="/updatePlanet?name=<%= planet.name %>">UPDATE</a>] 
            [<a onclick="deleteConfirm()" class="removePlanet" href="/deletePlanet?name=<%= planet.name %>">DELETE</a>] 
            
            <%= planet.name %> <br>
        
        
        <% }) %>
        
        <a href="/logout" class="logoutBtn">Logout</button>
        
        <link href="/css/styles.css" rel="stylesheet" />
    </body>
</html>